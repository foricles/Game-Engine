#version 330
layout (location = 0) in vec3 Position;
layout (location = 1) in vec3 Normal;
layout (location = 2) in vec4 Color;

out vec2 pixPos;
out vec4 pixCol;

uniform mat4 modelMatrix;

void main()
{
	vec4 np = modelMatrix * vec4(Position, 1.0);
	gl_Position = np;
	pixCol = Color;
	pixPos = Position.xy;
}